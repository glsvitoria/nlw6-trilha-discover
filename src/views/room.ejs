<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rocket.Q - Perguntas e Respostas</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/style/global.css" />
    <link rel="stylesheet" href="/style/room.css" />
    <link rel="stylesheet" href="/style/modal.css" />

    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- SCRIPTS -->
    <script src="/scripts/main.js" defer type="module"></script>

  </head>
  <body>
    <div id="room" class="content">
      <header>
        <a href="/">
          <img src="/images/logo-red.svg" alt="Logo da Rocket.Q" />
        </a>

        <div class="buttons">
          <div class="button outlined" id="room-id" data-id="<%= roomId %>">
            #<%= roomId %>
            <img src="/images/copy-red.svg" alt="Copiar número da sala" />
          </div>
          <a href="/create-pass" class="button">
            <img src="/images/users-white.svg" alt="Criar uma sala" />
            Criar sala
          </a>
        </div>
      </header>

      <main>
        <section id="question-form">
          <h2>Faça sua pergunta</h2>
          <form action="/question/create/<%= roomId %>" method="POST">
            <label class="sr-only" for="question"
              >O que você quer perguntar?</label
            >
            <textarea
              name="question"
              id="question"
              placeholder="O que você quer perguntar"
            ></textarea>

            <footer>
              <div>
                <img src="/images/security.svg" alt="Cadeado" />
                Esta pergunta é anônima
              </div>
              <button>Enviar</button>
            </footer>
          </form>
        </section>

        <section id="questions">
          <h2 class="sr-only">Perguntas da comunidade</h2>
          <div class="questions">

            <% if(isNoQuestions){ %>
                <%- include('parts/no-question') %>
            <% } %>

            <% questions.forEach(question => { %>
              <div class="question-wrapper">
                <!--Bloco inteiro-->
                <div class="question-content">
                  <!--Conteúdo do bloco-->
                  <div class="user">
                    <!--Avatar da pessoa-->
                    <img src="/images/user.svg" alt="Avatar" />
                  </div>
                  <div class="question">
                    <!--Pergunta-->
                    <p><%= question.title %></p>
                  </div>
                </div>
                <div class="actions">
                  <a href="#" class="check" data-id="<%= question.id %>">
                    <img src="/images/check.svg" alt="Marcar como lida" />
                    Marcar como lida
                  </a>
                  <a href="#" class="delete" data-id="<%= question.id %>">
                    <img src="/images/trash.svg" alt="Excluir pergunta" />
                    Excluir
                  </a>
                </div>
              </div>
            <% }) %>

            <% questionsRead.forEach(questionRead => {%>
              <div class="question-wrapper read">
                <!--Bloco inteiro-->
                <div class="question-content">
                  <!--Conteúdo do bloco-->
                  <div class="user">
                    <!--Avatar da pessoa-->
                    <img src="/images/user.svg" alt="Avatar" />
                  </div>
                  <div class="question">
                    <!--Pergunta-->
                    <p><%= questionRead.title %></p>
                  </div>
                </div>
                <div class="actions">
                  <a href="#" class="delete" data-id="<%= questionRead.id %>">
                    <img src="/images/trash.svg" alt="Excluir pergunta" />
                    Excluir
                  </a>
                </div>
              </div>
            <% }) %>
            
          </div>
        </section>
      </main>
    </div>

    <!----------- MODAL ----------->

    <div class="modal-wrapper">
      <div class="modal">
        <h2>Excluir Pergunta</h2>
        <p>Tem certeza que você deseja excluir esta pergunta?</p>

        <form action="#" method="POST">
          <label class="sr-only" for="password">Digite sua senha admin</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Digite sua senha"
          />

          <div class="buttons">
            <div class="button grey cancel">Cancelar</div>
            <button class="red">Sim, excluir</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
